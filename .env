# Environment Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=forex-analysis-pro-secret-key

# API Keys (Optional - app works without them)
# Get free Alpha Vantage key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# Get free Fixer.io key from: https://fixer.io/
FIXER_API_KEY=

# Get free ExchangeRate-API key from: https://app.exchangerate-api.com/sign-up/free
EXCHANGERATE_API_KEY=

# Database
DATABASE_URL=sqlite:///forex_analysis.db

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Data Update Intervals (in seconds)
PRICE_UPDATE_INTERVAL=30
FUNDAMENTAL_UPDATE_INTERVAL=3600
NEWS_UPDATE_INTERVAL=1800

# Data Source Priority
# 1=highest priority, 5=lowest priority
YAHOO_FINANCE_PRIORITY=1
ALPHA_VANTAGE_PRIORITY=2
FIXER_IO_PRIORITY=3
EXCHANGERATE_API_PRIORITY=4
FINANCIAL_MODELING_PREP_PRIORITY=5

# Timeout settings
API_TIMEOUT_SECONDS=10
MAX_RETRIES=3
